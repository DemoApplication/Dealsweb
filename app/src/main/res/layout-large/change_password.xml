<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/change_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/sky_blue"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/backarrow_change_password"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:src="@drawable/backarrowwhite" />

        <com.ngagroupinc.movers.Roboto.CustomTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/backarrow_change_password"
            android:text="Change Password"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:typeface="roboto_medium" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <com.ngagroupinc.movers.Roboto.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Change Account Password"
                android:textColor="@color/blue"
                android:textSize="26sp"
                app:typeface="roboto_regular" />


            <com.ngagroupinc.movers.Roboto.CustomTextView
                android:id="@+id/show_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:lineSpacingExtra="2dp"
                android:text="Choose your own unique password and enter it here. it will be immediately updated in our database"
                android:textSize="22sp"
                app:typeface="roboto_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <com.ngagroupinc.movers.Roboto.CustomEditText
                    android:id="@+id/current_password_editext"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="Current Password"
                    android:maxLength="15"
                    android:paddingLeft="10dp"
                    android:textSize="24sp"
                    app:typeface="roboto_regular" />

                <ImageView
                    android:id="@+id/current_password_eye_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:src="@drawable/showpaswrdicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <com.ngagroupinc.movers.Roboto.CustomEditText
                    android:id="@+id/new_password_editext"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="New Password"
                    android:maxLength="15"
                    android:paddingLeft="10dp"
                    android:textSize="24sp"
                    app:typeface="roboto_regular" />

                <ImageView
                    android:id="@+id/new_password_eye_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:src="@drawable/showpaswrdicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <com.ngagroupinc.movers.Roboto.CustomEditText
                    android:id="@+id/confirm_pass_editext"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_bg"
                    android:hint="Confirm Password"
                    android:maxLength="15"
                    android:paddingLeft="10dp"
                    android:textSize="24sp"
                    app:typeface="roboto_regular" />

                <ImageView
                    android:id="@+id/confirm_password_eye_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:src="@drawable/showpaswrdicon" />
            </RelativeLayout>

            <com.ngagroupinc.movers.Roboto.CustomButton
                android:id="@+id/btn_save"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/round_corener_buttonone_large"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:typeface="roboto_medium" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>