<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradiant"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/activity_my_relativeLayout_one"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/sky_blue"
        android:gravity="center|left">

        <TextView
            android:id="@+id/text_joinActivit_one"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/backarrow_join_one"
            android:lines="1"
            android:singleLine="true"
            android:text="Join Now"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text" />

        <ImageView
            android:id="@+id/backarrow_join_one"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/backarrowwhite" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:src="@drawable/logo" />


            <EditText
                android:id="@+id/email_join_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email_con"
                android:drawablePadding="12dip"
                android:textColorHint="@color/white"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:hint="Email"
                android:textSize="24sp"
                android:backgroundTint="@color/white"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <EditText
                    android:id="@+id/passoword_join_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:maxLength="15"
                    android:textSize="24sp"
                    android:textColorHint="@color/white"
                    android:drawableLeft="@drawable/password_icon"
                    android:textColor="@color/white"
                    android:drawablePadding="12dip"
                    android:backgroundTint="@color/white"
                    android:singleLine="true" />
                <ImageView
                    android:id="@+id/password_eye_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/eye_pass" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <EditText
                    android:id="@+id/confirm_password_join_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:maxLength="15"
                    android:textSize="24sp"
                    android:textColorHint="@color/white"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/password_icon"
                    android:drawablePadding="12dip"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:singleLine="true"
                    />

                <ImageView
                    android:id="@+id/confirm_password_eye_icon_join"
                    android:layout_width="38dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/eye_pass" />
            </RelativeLayout>

            <Button
                android:id="@+id/signupbutton"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:text="Join Now"
                android:textSize="24sp"
                android:textAllCaps="false"
                android:background="@drawable/corner_button_sign_in"
                android:textColor="@color/blue" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="OR"
                android:textSize="20sp" />

            <!--      <RelativeLayout
                      android:id="@+id/rll_join_fb"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:background="#3b5998"
                      android:orientation="horizontal">

                      <ImageView
                          android:id="@+id/login_facebook"
                          android:layout_width="wrap_content"

                          android:layout_height="40dp"
                          android:layout_alignParentLeft="true"
                          android:src="@drawable/facebook_icon" />

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="40dp"
                          android:layout_alignParentRight="true"
                          android:gravity="center"
                          android:background="@drawable/corner_button_fb"
                          android:text="Join with facebook"
                          android:textColor="@color/white" />
                  </RelativeLayout>
      -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:text="Join with Facebook"
                android:textColor="@color/white"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:drawableLeft="@drawable/facebook_icon"
                android:paddingLeft="20dp"
                android:paddingRight="60dp"
                android:textSize="24sp"
                android:id="@+id/rll_join_fb"
                android:background="@drawable/corner_button_fb"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Already have an account? Sign In"
                android:textSize="22sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/activity_my_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/sky_blue"
        android:gravity="center|left">

        <TextView
            android:id="@+id/text_joinActivity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/backarrow_join"
            android:lines="1"
            android:singleLine="true"
            android:text="Join DealsWeb"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text" />

        <ImageView
            android:id="@+id/backarrow_join"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/backarrowwhite" />


    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
